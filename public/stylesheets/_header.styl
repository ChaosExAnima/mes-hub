.header
    position relative

    &__branding
        background-image url( '/images/site-header.png' )
        width size-body
        height 190px
        display block

    &__menu-user
        text-align right
        absolute top 0.5rem right 0
        font .9em / 1.5rem font-sans

        &,
        a
            color color-light

        a:hover
            text-decoration underline

    &__nav
        absolute top 124px
        background-color color-accent
        width 100%
        font 13px 'Century Gothic', Futura, 'URW Gothic L', Verdana, sans-serif

        &-menu
            display flex
            margin size-border
            background-color color-nav
            padding .25rem
            border 1px solid darken( color-nav, 50% )
            border-top-color lighten( color-nav, 50% )
            box-shadow 0 2px 2px rgba( color-dark, 0.8 )

        &-link
            display block
            padding .25rem 1rem

            &,
            &:hover
                color color-light

            &:hover
                color color-light
                background-color lighten( color-accent, 10% )
